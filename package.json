{
  "name": "reflexbox",
  "version": "1.1.2",
  "description": "React flexbox layout and grid system",
  "main": "dist/index.js",
  "scripts": {
    "docs": "webpack -p --progress --colors --config docs/webpack.config.js",
    "docs:dev": "webpack-dev-server --progress --colors --config docs/webpack.config.js",
    "docs:deploy": "gh-pages -d docs",
    "prepublish": "mkdir -p dist && babel src --out-dir dist",
    "karma": "karma start test/karma.conf.js",
    "karma:watch": "karma start test/karma.conf.js --auto-watch --no-single-run",
    "mocha": "mocha --compilers js:babel-register",
    "mocha:watch": "mocha --watch --compilers js:babel-register",
    "standard": "standard",
    "start": "npm run docs:dev",
    "test": "standard && npm run mocha && npm run karma"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "expect": "^1.15.2",
    "gh-pages": "^0.11.0",
    "json-loader": "^0.5.3",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-safari-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.3",
    "raw-loader": "^0.5.1",
    "react": "^15.2.0",
    "react-addons-test-utils": "^15.2.0",
    "react-docgen": "^2.7.0",
    "react-dom": "^15.2.0",
    "react-element-to-jsx-string": "^3.1.0",
    "standard": "^7.1.2",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  },
  "dependencies": {
    "object-assign": "^4.0.1"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jxnblk/reflexbox.git"
  },
  "keywords": [
    "react",
    "flexbox",
    "layout",
    "grid"
  ],
  "bugs": {
    "url": "https://github.com/jxnblk/reflexbox/issues"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "docs/dev.js"
    ],
    "globals": [
      "beforeEach",
      "context",
      "describe",
      "it"
    ]
  },
  "homepage": "https://github.com/jxnblk/reflexbox#readme"
}
