{
  "name": "reflexbox",
  "version": "1.0.0",
  "description": "React flexbox layout and grid system",
  "main": "dist/index.js",
  "scripts": {
    "docs": "webpack -p --progress --colors --config docs/webpack.config.js",
    "docs:dev": "webpack-dev-server --progress --colors --config docs/webpack.config.js",
    "prepublish": "babel src --out-dir dist",
    "karma": "karma start test/karma.config.js",
    "karma:watch": "karma start test/karma.config.js --auto-watch --no-single-run",
    "mocha": "mocha --compilers js:babel-register",
    "mocha:watch": "mocha --watch --compilers js:babel-register",
    "standard": "standard",
    "start": "npm run docs:dev",
    "test": "npm run mocha && npm run karma",
    "rcp": "babel-node rcp-test.js"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "peerDependencies": {
    "react": "^0.14.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "expect": "^1.15.2",
    "json-loader": "^0.5.3",
    "karma": "^0.13.10",
    "karma-chrome-launcher": "^0.2.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-webpack": "^1.7.0",
    "lodash": "^3.10.1",
    "mocha": "^2.3.3",
    "raw-loader": "^0.5.1",
    "react": "^0.14.7",
    "react-addons-test-utils": "^0.14.0",
    "react-docgen": "^2.7.0",
    "react-dom": "^0.14.0",
    "react-element-to-jsx-string": "^2.4.0",
    "skin-deep": "^0.8.1",
    "standard": "^5.3.1",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jxnblk/reflexbox.git"
  },
  "keywords": [
    "react",
    "flexbox",
    "layout",
    "grid"
  ],
  "bugs": {
    "url": "https://github.com/jxnblk/reflexbox/issues"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "standard": {
    "globals": [
      "beforeEach",
      "context",
      "describe",
      "it"
    ]
  },
  "homepage": "https://github.com/jxnblk/reflexbox#readme"
}
